<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/halloween">

    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="27dp"
        android:text="BranchWise  Guide"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:text="Computer_Science_And_Engineering" />

        <Button
            android:id="@+id/button1"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:text="Electronics_And_Telecommunication" />

        <Button
            android:id="@+id/button2"
            android:layout_marginLeft="8dp"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:text="Information_Technology" />

        <Button
            android:id="@+id/button3"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:text="Electrical_Engineering" />

        <Button
            android:id="@+id/button4"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:text="Civil_Engineering" />

        <Button
            android:id="@+id/button5"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:text="Production" />

        <Button
            android:id="@+id/button6"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:text="Mechanical" />

        <Button
            android:id="@+id/button7"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:text="Instrumentation" />

        <Button
            android:id="@+id/button8"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:text="Chemical" />

        <Button
            android:id="@+id/button9"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:text="Textile" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>